

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dicksonmully6gmail.doctorapp.ui.DoctorDetailFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDarkBlue">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:id="@+id/doctorImageView"
                    android:src="@drawable/background_doc"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:paddingLeft="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                   >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctor Name"
                    android:id="@+id/doctorNameTextView"
                    android:layout_alignTop="@+id/doctorImageView"
                    android:layout_alignParentRight="true"
                    android:textSize="20sp"
                    android:paddingRight="30dp"
                    android:textColor="@color/colorPrimaryDarkBlue"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5/5"
                    android:id="@+id/ratingTextView"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/doctorNameTextView"
                    android:textColor="@color/colorAccentPink"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brunch, American"
                    android:id="@+id/specialtyTextView"
                    android:layout_below="@+id/doctorNameTextView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/colorSecondaryText"
                    android:textStyle="italic" />
                </LinearLayout>

            </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_above="@+id/saveRestaurantButton"
                    android:paddingLeft="30dp"
                    android:paddingTop="20dp"
                    android:paddingRight="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View on Website"
                        android:id="@+id/websiteTextView"
                        android:drawableLeft="@drawable/ic_exit_to_app_black_24dp"
                        android:drawablePadding="4dp"
                        android:textColor="@color/colorTextIcons"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(503) 223-1282"
                        android:id="@+id/phoneTextView"
                        android:drawableLeft="@drawable/ic_local_phone_black_24dp"
                        android:drawablePadding="4dp"
                        android:textColor="@color/colorTextIcons"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123 SW Best Ever Ave. Portland, Oregon, 97222"
                        android:drawableLeft="@drawable/ic_map_black_24dp"
                        android:drawablePadding="4dp"
                        android:id="@+id/addressTextView"
                        android:textColor="@color/colorTextIcons"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"/>

                </LinearLayout>
            </ScrollView>

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Save Doctor"
                android:id="@+id/saveDoctorButton"
                android:background="@color/colorAccentBlue"
                android:textColor="@color/colorTextIcons"
                android:textSize="15sp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
